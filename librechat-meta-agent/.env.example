# ============================================================================
# Meta Agent Platform - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# AI PROVIDER API KEYS (At least one required)
# ============================================================================

# Anthropic Claude (Required for default)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI GPT Models
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini Models
GOOGLE_API_KEY=your-google-api-key-here

# DeepSeek Models (Optional - for DeepSeek V3, R1 models)
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Mistral Models (Optional)
MISTRAL_API_KEY=your-mistral-api-key-here

# xAI Grok Models (Optional)
XAI_API_KEY=your-xai-api-key-here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL with pgvector
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=librechat_meta
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Full database URL (alternative to individual settings)
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5433/librechat_meta

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

REDIS_URL=redis://localhost:6380
REDIS_PASSWORD=

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

# JWT Secret (min 32 characters, generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-min-32-characters-long-here

# Session configuration
SESSION_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30

# Password hashing rounds (10-14 recommended)
BCRYPT_ROUNDS=12

# ============================================================================
# SUPABASE CONFIGURATION (Optional - for managed auth & storage)
# ============================================================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# OAUTH PROVIDERS (Optional)
# ============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

NODE_ENV=development
PORT=3100
LOG_LEVEL=info

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3080

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# UI CONFIGURATION
# ============================================================================

NEXT_PUBLIC_API_URL=http://localhost:3100
NEXT_PUBLIC_APP_NAME=Meta Agent
NEXT_PUBLIC_ENABLE_AUTH=true

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# Westlaw Legal Research API
WESTLAW_API_KEY=
WESTLAW_CLIENT_ID=

# LexisNexis Legal Research API
LEXISNEXIS_API_KEY=
LEXISNEXIS_CLIENT_ID=

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Gmail Integration
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# ============================================================================
# OBSERVABILITY (Optional)
# ============================================================================

# Sentry Error Tracking
SENTRY_DSN=

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=

# ============================================================================
# DEVELOPMENT OPTIONS
# ============================================================================

# Enable verbose logging
DEBUG=false

# Skip SSL verification (development only)
NODE_TLS_REJECT_UNAUTHORIZED=1

# Mock external APIs for testing
MOCK_EXTERNAL_APIS=false
