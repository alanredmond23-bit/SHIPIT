# ============================================================================
# Meta Agent - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# REQUIRED variables are marked with (REQUIRED)
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
NODE_ENV=production
LOG_LEVEL=info
PORT=3100

# Application URLs (update for production)
APP_URL=http://localhost:3000
API_URL=http://localhost:3100
CORS_ORIGINS=http://localhost:3000,http://localhost:3080,http://localhost:80

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL with pgvector)
# ----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres  # (REQUIRED) Change this for production!
POSTGRES_DB=librechat_meta
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
DATABASE_SSL=false

# Full database URL (alternative to individual settings)
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5433/librechat_meta

# ----------------------------------------------------------------------------
# Redis Configuration (Caching & Sessions)
# ----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6380
REDIS_PASSWORD=redis_default_pass  # (REQUIRED) Change this for production!

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
# (REQUIRED) Generate secure random strings for production
# Use: openssl rand -base64 32

JWT_SECRET=your-jwt-secret-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# Session configuration
SESSION_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# AI Service API Keys
# ----------------------------------------------------------------------------

# Anthropic Claude (REQUIRED for core functionality)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI (Optional - for GPT models)
OPENAI_API_KEY=your-openai-api-key-here

# Google AI (Optional - for Gemini models)
GOOGLE_API_KEY=your-google-api-key-here

# DeepSeek (Optional - for DeepSeek V3, R1 models)
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Mistral (Optional - for Mistral models)
MISTRAL_API_KEY=your-mistral-api-key-here

# xAI Grok (Optional - for Grok models)
XAI_API_KEY=your-xai-api-key-here

# Together AI (Optional - for Llama 3.x and open models)
TOGETHER_API_KEY=your-together-api-key-here

# Groq (Optional - fast inference for open models)
GROQ_API_KEY=your-groq-api-key-here

# ElevenLabs (Optional - for voice synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Stability AI (Optional - for image generation)
STABILITY_API_KEY=your-stability-api-key-here

# Replicate (Optional - for various AI models)
REPLICATE_API_KEY=your-replicate-api-key-here

# ----------------------------------------------------------------------------
# Supabase Configuration (REQUIRED for UI authentication)
# Get these from: https://app.supabase.com/project/_/settings/api
# ----------------------------------------------------------------------------

# Public keys (exposed to browser - required for ui-extensions)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-side keys (keep secret - for orchestrator)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ----------------------------------------------------------------------------
# OAuth Providers (Optional)
# ----------------------------------------------------------------------------

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_WORKSPACE_DOMAIN=your-workspace-domain.com

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ----------------------------------------------------------------------------
# External Services (Optional)
# ----------------------------------------------------------------------------

# Westlaw Legal Research API
WESTLAW_API_KEY=
WESTLAW_CLIENT_ID=

# LexisNexis Legal Research API
LEXISNEXIS_API_KEY=
LEXISNEXIS_CLIENT_ID=

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Gmail Integration
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# ----------------------------------------------------------------------------
# File Upload & Storage
# ----------------------------------------------------------------------------
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=/app/uploads

# AWS S3 (optional):
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_VOICE=true
ENABLE_IMAGES=true
ENABLE_VIDEO=true
ENABLE_COMPUTER_USE=true
ENABLE_SCHEDULED_TASKS=true
ENABLE_GOOGLE_WORKSPACE=false
ENABLE_VS_CODE_EXTENSION=false

# ----------------------------------------------------------------------------
# Nginx Configuration
# ----------------------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ----------------------------------------------------------------------------
# Next.js Frontend Configuration
# ----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3100
NEXT_PUBLIC_WS_URL=ws://localhost:3100
NEXT_PUBLIC_APP_NAME=Meta Agent
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_IMAGES=true
NEXT_PUBLIC_ENABLE_VIDEO=true

# ----------------------------------------------------------------------------
# Monitoring & Observability (Optional)
# ----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token
# OTEL_EXPORTER_OTLP_ENDPOINT=

# ----------------------------------------------------------------------------
# Development Settings
# ----------------------------------------------------------------------------
# DEBUG=false
# NODE_TLS_REJECT_UNAUTHORIZED=1
# MOCK_EXTERNAL_APIS=false
# NEXT_TELEMETRY_DISABLED=1

# ----------------------------------------------------------------------------
# Quick Start
# ----------------------------------------------------------------------------
# 1. Copy: cp .env.example .env
# 2. Generate secrets: openssl rand -base64 32
# 3. Add your Anthropic API key (minimum requirement)
# 4. Deploy: ./scripts/deploy.sh docker
