{
  "name": "meta-agent-desktop",
  "version": "1.0.0",
  "description": "Meta Agent - Multi-LLM AI Orchestration Platform",
  "main": "main.js",
  "author": {
    "name": "Meta Agent Team",
    "email": "team@metaagent.app"
  },
  "license": "MIT",
  "homepage": "https://github.com/alanredmond23-bit/SHIPIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alanredmond23-bit/SHIPIT.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:next\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:next": "cd ../ui-extensions && npm run dev",
    "prebuild": "npm run build:next && npm run copy-renderer",
    "build": "electron-builder",
    "build:next": "cd ../ui-extensions && NEXT_STATIC_EXPORT=true npm run build",
    "copy-renderer": "node scripts/copy-renderer.js",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "build:all": "npm run prebuild && electron-builder --mac --win --linux",
    "pack": "npm run prebuild && electron-builder --dir",
    "generate-icons": "node scripts/generate-icons.js",
    "clean": "rm -rf dist renderer",
    "publish": "npm run prebuild && electron-builder --publish always",
    "publish:mac": "npm run prebuild && electron-builder --mac --publish always",
    "publish:win": "npm run prebuild && electron-builder --win --publish always",
    "publish:linux": "npm run prebuild && electron-builder --linux --publish always"
  },
  "build": {
    "appId": "com.metaagent.desktop",
    "productName": "Meta Agent",
    "copyright": "Copyright 2024 Meta Agent Team",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*",
      "!node_modules/sharp/**/*",
      "!node_modules/png-to-ico/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "owner": "alanredmond23-bit",
      "repo": "SHIPIT",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "darkModeSupport": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "publisherName": "Meta Agent Team",
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Meta Agent",
      "differentialPackage": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "maintainer": "Meta Agent Team <team@metaagent.app>",
      "vendor": "Meta Agent Team",
      "synopsis": "Multi-LLM AI Orchestration Platform",
      "desktop": {
        "Name": "Meta Agent",
        "Comment": "Multi-LLM AI Orchestration Platform",
        "Categories": "Development;Utility;Network;AI;",
        "Keywords": "AI;LLM;Claude;GPT;Orchestration;Agent;",
        "StartupWMClass": "meta-agent-desktop",
        "MimeType": "x-scheme-handler/meta-agent;"
      }
    },
    "deb": {
      "depends": ["libnotify4", "libxtst6", "libnss3"],
      "priority": "optional",
      "afterInstall": "build/linux/after-install.sh",
      "afterRemove": "build/linux/after-remove.sh"
    },
    "rpm": {
      "depends": ["libnotify", "libXtst", "nss"]
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "Meta Agent",
      "icon": "resources/icon.icns",
      "background": "resources/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "wait-on": "^7.2.0"
  }
}
